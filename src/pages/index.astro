---
import Layout from "../layouts/Layout.astro";
import Testimonials from "../components/Testimonials.astro";
import Contact from "../components/Contact.astro";
import Paralax from "../components/Paralax.astro";
---

<Layout title="Welcome Casamia.">
  <main>
    <section>
      <div class="flex flex-col items-center justify-center w-full h-screen">
        <div class="z-30 flex flex-col w-10/12 px-10 pt-14">
          <div
            class="text-white w-full flex flex-grow pt-24 pb-4 justify-center"
          >
            <image src="/images/logo.png" class="w-60" alt="Astro Logo" />
          </div>
        </div>

        <image
          src="/images/bg_main.jpg"
          alt="Astro Logo"
          class="absolute object-cover w-full h-full z-0 brightness-50"
        />
      </div>
    </section>
    <section><Testimonials /></section>
    <section><Contact /></section>
  </main>
</Layout>
